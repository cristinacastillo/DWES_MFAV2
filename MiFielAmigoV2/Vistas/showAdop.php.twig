{% block contenido %}

 
<div class="container">

    {% if dat == null %}

    <div class='alert alert-warning' style='margin:5em;text-align:center' role='alert'><p>No tienes adopciones</p></div>

    {% else %}

    <table class="table table-striped">
        <thead>
            <tr>
                <th class="th" scope="col">Adopciones</th>
                <th class="th" scope="col">Nombre del perro</th>
                <th class="th" scope="col">Fecha de Adopción</th>

            </tr>
        </thead>
            {% for item in dat %}
                
            <tbody>
                <tr>
                    <th scope="row">&#128021 &#128054</th>
                    <td>{{ item.nombre }}</td>
                    <td>{{ item.fecha }}</td>

